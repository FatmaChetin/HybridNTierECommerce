@model AdminAddUpdateCategoryPageVM
@{
    ViewBag.Title = "UpdateCategory";
}
<h2>Kategori Ekle</h2>

<br /><br />
<style>
    genişlik { width:300px};
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Categories.ID)
<div class="row">
    <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2"> Kategori İsmi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Categories.CategoryName, new { @class = "form-control-genislik" })
                        </div>
                    </div>

                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Categories.Description, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">İşlem:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>


                        </div>
                    </div>
                </div>

            </section>
    </div>

</div>
}