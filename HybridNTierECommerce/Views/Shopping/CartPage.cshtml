@model Cart
@{
    ViewBag.Title = "CartPage";
}

<div class="jumbotron">
    Odemeniz gereken toplam tutar => @Model.TotalPrice ... Siparişi onaylamak icin lütfen @Html.ActionLink("tıklayınız","ConfirmOrder")
</div>



<div class="row product-list">

    @foreach (CartItem item in Model.Sepetim)
    {

        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                   
                    <a href="@Url.Action("DeleteFromCart", new { id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>

                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title"       title="@item.Name">
                            @item.Name x @item.Amount
                        </a>
                    </h4>
                    <p class="price"> @item.SubTotal</p>
                </div>

            </section>
        </div>

    }






</div>

